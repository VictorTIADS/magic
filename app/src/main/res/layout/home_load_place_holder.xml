<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/title_load_holder"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:background="#cecece"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/type_load_holder"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="200dp"
        android:background="#cecece"
        app:layout_constraintEnd_toEndOf="@id/title_load_holder"
        app:layout_constraintStart_toStartOf="@+id/title_load_holder"
        app:layout_constraintTop_toBottomOf="@+id/title_load_holder" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/type_load_holder"
        app:layout_constraintTop_toBottomOf="@id/type_load_holder">

        <include layout="@layout/home_cards_list_load_place_holder"/>
        <include layout="@layout/home_cards_list_load_place_holder"/>
        <include layout="@layout/home_cards_list_load_place_holder"/>
        <include layout="@layout/home_cards_list_load_place_holder"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>